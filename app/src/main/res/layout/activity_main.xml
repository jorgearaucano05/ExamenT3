<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/RegistrarEntrenador"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Registrar Entrenador"
            app:rippleColor="#E30000" />

        <Button
            android:id="@+id/mis_pokemones"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Mis Pokemones"
            app:rippleColor="#E30000"/>

        <Button
            android:id="@+id/RegistrarPokemon"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Registrar Pokemon" />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>